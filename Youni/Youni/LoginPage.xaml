<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Youni.LoginPage">
    <AbsoluteLayout>
        <Image Source="login_icon.png" AbsoluteLayout.LayoutBounds=".5, .215, .3, .3" AbsoluteLayout.LayoutFlags="All" />
        <Entry x:Name="emailEntry" AbsoluteLayout.LayoutBounds=".5, .6, .9, .07" AbsoluteLayout.LayoutFlags="All" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" AbsoluteLayout.LayoutBounds=".5, .68, .9, .07" AbsoluteLayout.LayoutFlags="All" Placeholder="Password" IsPassword="true" />
        <Button x:Name="loginButton" AbsoluteLayout.LayoutBounds=".5, .85, .4, .07" AbsoluteLayout.LayoutFlags="All" Text="Login" TextColor="White" BackgroundColor="#3A8FDA" />
    </AbsoluteLayout>
</ContentPage>