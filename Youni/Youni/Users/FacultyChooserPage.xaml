    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="50" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Image
            Source="blue_background.png"
            Aspect="Fill"
            Grid.Row="0" />
        <Image
            Source="icon.png"
            Aspect="AspectFit"
            Grid.Row="0" />
        <Label
            Text="Scegli la tua facoltà"
            FontSize="Large"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            TextColor="#174668"
            Grid.Row="1" />
        <flv:FlowListView
            SeparatorVisibility="None"
            HasUnevenRows="true"
            FlowItemsSource="{Binding Faculties}"
            FlowColumnCount="1"
            FlowItemTappedCommand="{Binding FacultyChoosedCommand}"
            FlowLastTappedItem="{Binding FacultyTapped}"
            Grid.Row="2">
            <flv:FlowListView.FlowColumnTemplate>
                <DataTemplate>
                    <Frame
                        Margin="10"
                        Padding="0"
                        HasShadow="false"
                        OutlineColor="#174668">
                        <Grid
                            RowSpacing="0">
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image
                                Source="{Binding Path}"
                                Aspect="AspectFill"
                                Grid.Row="0" />
                            <Label
                                Text="{Binding Name}"
                                FontSize="Large"
                                HorizontalTextAlignment="Center"
                                TextColor="#174668"
                                Grid.Row="1" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </flv:FlowListView.FlowColumnTemplate>
        </flv:FlowListView>
    </Grid>
