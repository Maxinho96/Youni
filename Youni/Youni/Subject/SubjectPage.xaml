<?xml version="1.0" encoding="utf-8" ?>
<NavigationPage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="Youni.SubjectPage"
                Title="Corso">
    <NavigationPage.ToolbarItems>
        <ToolbarItem Name="Notify" Icon="notification_off" Activated="NotifyTapped"></ToolbarItem>
        <ToolbarItem Name="Favourites" Icon="favourites_off" Activated="FavouritesTapped"></ToolbarItem>
    </NavigationPage.ToolbarItems>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentView Grid.Row="0" BackgroundColor="#3a8fda">
            <Label Text="{Binding subjectName}" TextColor="White">Reti di calcolatori</Label>
            <SearchBar Placeholder="ricerca" PlaceholderColor="#45565c" HeightRequest="Auto" WidthRequest="100" />
            <Frame Padding="0" Margin="0,10,0,10" BackgroundColor="Transparent" OutlineColor="174668" HasShadow="true" HeightRequest="70" 
                       WidthRequest="70" CornerRadius="35" HorizontalOptions="Center">
                <Image Source="group.png" Margin="16,16,16,16"/>
            </Frame>
        </ContentView>

        <ContentView Grid.Row="1">
            
        </ContentView>
        
    </Grid>
</NavigationPage>