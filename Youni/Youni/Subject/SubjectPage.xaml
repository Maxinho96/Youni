<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="Youni.SubjectPage"
                BackgroundColor="White"
                Title="Corso">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Notify" Icon="notification_off" Command="{Binding NotifyTapped}"></ToolbarItem>
        <ToolbarItem Name="Favourites" Icon="favourites_off" Command="{Binding FavouritesTapped}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentView Grid.Row="0" BackgroundColor="#3a8fda">
            <Label Text="{Binding SubjectName}" TextColor="White"/>
            <SearchBar Placeholder="ricerca" PlaceholderColor="#45565c" HeightRequest="100" WidthRequest="100" />
            <Frame Padding="0" Margin="0,10,0,10" BackgroundColor="Transparent" OutlineColor="#174668" HasShadow="true" HeightRequest="70" 
                       WidthRequest="70" CornerRadius="35" HorizontalOptions="Center">
                <Image Source="group.png" Margin="16,16,16,16"/>
            </Frame>
        </ContentView>
        
        <ContentView Grid.Row="1">
            
        </ContentView>
        
    </Grid>
</ContentPage>