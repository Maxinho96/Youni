<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Youni.SubjectPage" BackgroundColor="White">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Notify" Icon="{Binding Notification_icon}" Command="{Binding NotifyTapped}">
        </ToolbarItem>
        <ToolbarItem Name="Favourites" Icon="{Binding Favourites_icon}" Command="{Binding FavouritesTapped}">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <Grid BackgroundColor="#3a8fda" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
<!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>-->
        <Label Grid.Row="0" Text="{Binding SubjectName}" TextColor="White" FontSize="30" Margin="20,20,20,5" VerticalOptions="Fill" HorizontalOptions="Fill" HorizontalTextAlignment="Start"
            VerticalTextAlignment="Center" />
        <SearchBar Grid.Row="1" CancelButtonColor="White" BackgroundColor="#3a8fda" Margin="20,0,20,0" Placeholder="Ricerca" PlaceholderColor="#45565c" SearchCommand="{Binding SearchCommand}" />
        <!--<Frame Grid.Row="1" Grid.Column="1" Padding="0" Margin="20" BackgroundColor="Transparent" OutlineColor="#174668" HasShadow="true" HeightRequest="60" WidthRequest="60" CornerRadius="30">
            <Image Source="group.png" Margin="15" />
        </Frame>-->
        <BoxView Grid.Row="1" BackgroundColor="#3a8fda" HeightRequest="1" VerticalOptions="Start" HorizontalOptions="Fill" />
        <BoxView Grid.Row="1" BackgroundColor="#3a8fda" HeightRequest="1" VerticalOptions="End" HorizontalOptions="Fill" />
        <!--<Grid Grid.Row="0" BackgroundColor="#3a8fda">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="105" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="{Binding SubjectName}" TextColor="White" FontSize="30" FontAttributes="Bold" Margin="20,20,20,5" VerticalOptions="CenterAndExpand" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="112" />
                </Grid.ColumnDefinitions>
                <SearchBar Grid.Column="0" BackgroundColor="#3a8fda" Placeholder="Ricerca" PlaceholderColor="#45565c" SearchCommand="{Binding SearchCommand}" />
                <Frame Grid.Column="1" Padding="15" Margin="27,20,27,20" BackgroundColor="Transparent" OutlineColor="#174668" HasShadow="true" HeightRequest="70" WidthRequest="70" CornerRadius="35">
                    <Image Source="group.png" />
                </Frame>
            </Grid>
        </Grid>-->
        <ListView BackgroundColor="White" Grid.Row="2" ItemsSource="{Binding DocumentsList}" HasUnevenRows="true" x:Name="DocumentsList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image Grid.RowSpan="2" Grid.Column="0" Source="pdf.png" Margin="8" VerticalOptions="Center" />
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding DocumentTitle}" FontSize="21" TextColor="#45565c" Margin="0,15,0,0" />
                            <StackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="End" Orientation="Horizontal">
                                <Image Source="hat.png" HorizontalOptions="Start" />
                                <Label Text="{Binding DocumentUpvote}" HorizontalOptions="Start" />
                            </StackLayout>
                            <Image Grid.RowSpan="2" Grid.Column="2" Source="info.png" Margin="5" VerticalOptions="Center" />
                            <ContentView Grid.RowSpan="2" Grid.Column="1">
                                <ContentView.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding DocumentTitle}" Command="{Binding Path=BindingContext.DocumentTapped, Source={x:Reference Name=DocumentsList}}" />
                                </ContentView.GestureRecognizers>
                            </ContentView>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>